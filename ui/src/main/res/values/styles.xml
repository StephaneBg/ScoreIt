<resources>

    <style name="AppTheme"
        parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
        <item name="alertDialogTheme">@style/AlertDialogTheme</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@color/color_primary_dark</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowBackground">@color/grey_50</item>
    </style>

    <style name="AlertDialogTheme"
        parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="buttonBarPositiveButtonStyle">@style/AlertDialogPositiveButton</item>
        <item name="buttonBarNeutralButtonStyle">@style/AlertDialogNeutralButton</item>
        <item name="buttonBarNegativeButtonStyle">@style/AlertDialogNegativeButton</item>
    </style>

    <style name="AlertDialogPositiveButton"
        parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/green_500</item>
    </style>

    <style name="AlertDialogNeutralButton"
        parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/grey_500</item>
    </style>

    <style name="AlertDialogNegativeButton"
        parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/orange_500</item>
    </style>

    <style name="AppTheme.AppBarOverlay"
        parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorPrimary">@color/green_500</item>
    </style>

    <style name="AppTheme.PopupOverlay"
        parent="ThemeOverlay.AppCompat.Light" />

    <style name="TextAppearance.Title"
        parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/grey_500</item>
    </style>
</resources>
