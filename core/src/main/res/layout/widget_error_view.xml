<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:orientation="vertical"
    tools:parentTag="android.widget.LinearLayout"
    >

    <ImageView
        android:id="@+id/errorImage"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_gravity="center"
        android:importantForAccessibility="no"
        android:tint="?colorAccent"
        app:srcCompat="@drawable/ic_error_outline_black_24dp"
        />

    <TextView
        android:id="@id/errorMessage"
        style="?textAppearanceBody1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/margin_padding_size_large"
        tools:text="@string/error_general"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@id/errorAction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="@dimen/margin_padding_size_medium"
        android:text="@string/error_retry_action"
        />
</merge>