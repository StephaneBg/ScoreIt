<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.ScoreIt" parent="Base.Theme" />

    <style name="Base.Theme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:colorBackground">@color/background</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSurface">@color/surface</item>

        <item name="colorOnPrimary">@color/on_primary</item>
        <item name="colorOnSecondary">@color/on_secondary</item>
        <item name="colorOnSurface">@color/on_surface</item>
        <item name="colorOnBackground">@color/on_background</item>

        <item name="textAppearanceHeadline1">@style/TextAppearance.ScoreIt.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.ScoreIt.Headline2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.ScoreIt.Headline3</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.ScoreIt.Headline4</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.ScoreIt.Headline5</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.ScoreIt.Headline6</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.ScoreIt.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.ScoreIt.Subtitle2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.ScoreIt.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.ScoreIt.Body2</item>
        <item name="textAppearanceCaption">@style/TextAppearance.ScoreIt.Caption</item>
        <item name="textAppearanceOverline">@style/TextAppearance.ScoreIt.Overline</item>

        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.ScoreIt.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.ScoreIt.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.ScoreIt.LargeComponent</item>

        <item name="materialButtonStyle">@style/Widget.ScoreIt.Button</item>
        <item name="bottomSheetDialogTheme">@style/ThemeOverlay.ScoreIt.BottomSheetDialog</item>
        <item name="textInputStyle">@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox</item>
        <item name="materialAlertDialogTheme">@style/ThemeOverlay.ScoreIt.Dialog.Alert</item>

        <item name="android:statusBarColor">@color/status_bar</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>
        <item name="android:navigationBarColor">@color/navigation_bar</item>
        <item name="android:windowLightNavigationBar" tools:ignore="NewApi">true</item>
    </style>

    <style name="ThemeOverlay.ScoreIt.BottomSheetDialog"
        parent="ThemeOverlay.MaterialComponents.DayNight.BottomSheetDialog">
        <item name="materialButtonStyle">@style/Widget.ScoreIt.Button</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:navigationBarColor">?attr/colorSurface</item>
        <item name="elevationOverlayEnabled">false</item>
    </style>

    <style name="ThemeOverlay.ScoreIt.Dialog.Alert" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="materialButtonStyle">@style/Widget.MaterialComponents.Button.TextButton</item>
    </style>
</resources>