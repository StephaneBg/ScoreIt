<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >

    <TextView
        android:id="@+id/coffee"
        style="@style/TextAppearance.ScoreIt.Caption"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="?selectableItemBackground"
        android:drawablePadding="@dimen/margin_padding_size_small"
        android:gravity="center"
        android:padding="@dimen/margin_padding_size_small"
        app:drawableStartCompat="@drawable/ic_donate_coffee_24dp"
        tools:text="Buy me a coffee!\n1€"
        />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/margin_padding_size_small"
        android:layout_marginBottom="@dimen/margin_padding_size_small"
        android:background="?colorOnBackground"
        />

    <TextView
        android:id="@+id/beer"
        style="@style/TextAppearance.ScoreIt.Caption"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="?selectableItemBackground"
        android:drawablePadding="@dimen/margin_padding_size_small"
        android:gravity="center"
        android:padding="@dimen/margin_padding_size_small"
        app:drawableStartCompat="@drawable/ic_beer_24dp"
        tools:text="Buy me a beer!\n3€"
        />
</LinearLayout>
