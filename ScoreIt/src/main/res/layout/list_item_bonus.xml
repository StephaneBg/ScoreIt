<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/default_margin"
    android:gravity="center_horizontal"
    android:orientation="horizontal"
    tools:context="ScoreItActivity">

    <Spinner
        android:id="@+id/spinner_announce"
        android:layout_width="match_parent"
        android:layout_height="@dimen/widget_height"
        android:layout_marginTop="@dimen/default_margin"
        android:layout_toLeftOf="@+id/btn_remove_announce"/>

    <Spinner
        android:id="@+id/spinner_player"
        android:layout_width="match_parent"
        android:layout_height="@dimen/widget_height"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/spinner_announce"
        android:layout_toLeftOf="@+id/btn_remove_announce"/>

    <ImageButton
        android:id="@+id/btn_remove_announce"
        style="?borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/spinner_player"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/spinner_announce"
        android:src="@drawable/ic_cancel_24dp"
        android:tint="@color/gray_dark"/>
</RelativeLayout>