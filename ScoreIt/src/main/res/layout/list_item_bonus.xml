<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/default_margin"
    android:layout_marginRight="@dimen/default_margin"
    android:gravity="center_horizontal"
    android:orientation="horizontal"
    tools:context="ScoreItActivity">

    <TextView
        android:id="@+id/tv_bonus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/btn_remove_bonus"
        android:padding="@dimen/default_padding"
        tools:text="Petit" />

    <TextView
        android:id="@+id/tv_player"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/tv_bonus"
        android:layout_toLeftOf="@+id/btn_remove_bonus"
        android:padding="@dimen/default_padding"
        tools:text="Toto" />

    <ImageButton
        android:id="@+id/btn_remove_bonus"
        style="?borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/tv_player"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/tv_bonus"
        android:tint="@color/gray_dark"
        app:srcCompat="@drawable/ic_cancel_24dp" />
</RelativeLayout>