<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_name"
        style="@style/SubHeader"
        tools:text="Name"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:baselineAligned="false">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_minus"
                android:layout_width="@dimen/circle_btn"
                android:layout_height="@dimen/circle_btn"
                android:layout_margin="4dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="-1"
                android:textColor="@color/gray_dark"
                android:background="@drawable/btn_round_selector"
                android:stateListAnimator="@null"/>

            <Button
                android:id="@+id/btn_minus_10"
                android:layout_width="@dimen/circle_btn"
                android:layout_height="@dimen/circle_btn"
                android:layout_margin="4dp"
                android:layout_toRightOf="@id/btn_minus"
                android:text="-10"
                android:textColor="@color/gray_dark"
                android:background="@drawable/btn_round_selector"
                android:stateListAnimator="@null"/>

            <Button
                android:id="@+id/btn_minus_100"
                android:layout_width="@dimen/circle_btn"
                android:layout_height="@dimen/circle_btn"
                android:layout_margin="4dp"
                android:layout_below="@id/btn_minus_10"
                android:layout_toRightOf="@id/btn_minus"
                android:text="-100"
                android:textColor="@color/gray_dark"
                android:background="@drawable/btn_round_selector"
                android:stateListAnimator="@null"/>
        </RelativeLayout>

        <com.sbgapps.scoreit.widget.MaxWidthFrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:maxWidth="96dp">

            <com.sbgapps.scoreit.widget.RingTextView
                android:id="@+id/points"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="@dimen/font_display_1"
                tools:text="128"/>
        </com.sbgapps.scoreit.widget.MaxWidthFrameLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_plus_10"
                android:layout_width="@dimen/circle_btn"
                android:layout_height="@dimen/circle_btn"
                android:layout_margin="4dp"
                android:text="+10"
                android:textColor="@color/gray_dark"
                android:background="@drawable/btn_round_selector"
                android:stateListAnimator="@null"/>

            <Button
                android:id="@+id/btn_plus"
                android:layout_width="@dimen/circle_btn"
                android:layout_height="@dimen/circle_btn"
                android:layout_margin="4dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/btn_plus_10"
                android:text="+1"
                android:textColor="@color/gray_dark"
                android:background="@drawable/btn_round_selector"
                android:stateListAnimator="@null"/>

            <Button
                android:id="@+id/btn_plus_100"
                android:layout_width="@dimen/circle_btn"
                android:layout_height="@dimen/circle_btn"
                android:layout_margin="4dp"
                android:layout_below="@id/btn_plus_10"
                android:text="+100"
                android:textColor="@color/gray_dark"
                android:background="@drawable/btn_round_selector"
                android:stateListAnimator="@null"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
