<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin">

        <TextView
            style="@style/SubHeader"
            android:text="@string/scorer"/>

        <android.support.v7.widget.AppCompatSpinner
            android:id="@+id/spinner_taker"
            android:layout_width="match_parent"
            android:layout_height="@dimen/widget_height"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"/>

        <ViewStub
            android:id="@+id/viewstub_partner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout="@layout/stub_partner"/>

        <TextView
            style="@style/SubHeader"
            android:text="@string/bidding"/>

        <android.support.v7.widget.AppCompatSpinner
            android:id="@+id/spinner_bid"
            android:layout_width="match_parent"
            android:layout_height="@dimen/widget_height"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"/>

        <TextView
            style="@style/SubHeader"
            android:text="@string/oudlers"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <ToggleButton
                android:id="@+id/checkbox_petit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:background="@drawable/btn_toggle_selector"
                android:textOff="@string/petit"
                android:textOn="@string/petit"/>

            <ToggleButton
                android:id="@+id/checkbox_twenty_one"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:background="@drawable/btn_toggle_selector"
                android:textOff="@string/twentyone"
                android:textOn="@string/twentyone"/>

            <ToggleButton
                android:id="@+id/checkbox_excuse"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:background="@drawable/btn_toggle_selector"
                android:textOff="@string/excuse"
                android:textOn="@string/excuse"/>
        </LinearLayout>

        <TextView
            style="@style/SubHeader"
            android:text="@string/points"/>

        <com.sbgapps.scoreit.widget.SeekPoints
            android:id="@+id/seekbar_points"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_vertical_margin"/>

        <TextView
            style="@style/SubHeader"
            android:text="@string/bonuses"/>

        <Button
            android:id="@+id/btn_add_bonus"
            style="?android:borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_default"
            android:text="@string/add"
            android:textAllCaps="true"/>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>