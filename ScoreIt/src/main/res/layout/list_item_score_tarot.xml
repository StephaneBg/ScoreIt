<com.sbgapps.scoreit.views.widgets.RevealView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/reveal"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_item_height"
    tools:context=".ScoreItActivity">

    <include layout="@layout/include_back_score_list" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:visibility="gone">

        <RelativeLayout
            android:id="@id/front"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?attr/selectableItemBackground">

            <TextView
                android:id="@+id/summary"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:gravity="center_vertical"
                android:singleLine="true"
                tools:text="Joueur - Annonce" />

            <com.sbgapps.scoreit.views.widgets.LinearListView
                android:id="@+id/list_score"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/summary"
                android:baselineAligned="false"
                android:orientation="horizontal" />

            <View
                android:id="@+id/marker"
                android:layout_width="6dp"
                android:layout_height="match_parent" />
        </RelativeLayout>
    </FrameLayout>
</com.sbgapps.scoreit.views.widgets.RevealView>