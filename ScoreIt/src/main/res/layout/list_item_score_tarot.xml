<com.sbgapps.scoreit.widget.RevealView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/reveal"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_item_height">

    <include layout="@layout/include_back_score_list"/>

    <RelativeLayout
        android:id="@id/front"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/list_selector_score">

        <TextView
            android:id="@+id/summary"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:gravity="center_vertical"
            android:singleLine="true"
            tools:text="Joueur - Annonce"/>

        <com.sbgapps.scoreit.widget.LinearListView
            android:id="@+id/list_score"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/summary"
            android:baselineAligned="false"
            android:orientation="horizontal"/>

        <View
            android:id="@+id/marker"
            android:layout_width="6dp"
            android:layout_height="match_parent"/>
    </RelativeLayout>
</com.sbgapps.scoreit.widget.RevealView>