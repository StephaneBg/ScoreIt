<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_primary_400"
    android:fillViewport="true"
    tools:context=".AboutActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:gravity="bottom"
            android:src="@drawable/ic_app_hi_res"
            android:text="@string/app_name"/>

        <TextView
            android:id="@+id/version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/abc_text_size_large_material"
            tools:text="ScoreIt 0.0.0"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="StÃ©phane Baiget"
            android:textColor="@color/white"
            android:textSize="@dimen/abc_text_size_medium_material"
            tools:ignore="HardcodedText"/>

        <com.sbgapps.scoreit.views.widgets.MaxWidthFrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:maxWidth="320dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/activity_vertical_margin"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btn_rate"
                    style="?borderlessButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_star_24dp"
                    android:text="@string/rate_app"
                    android:textColor="@color/white"/>

                <Button
                    android:id="@+id/btn_share"
                    style="?borderlessButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:drawableLeft="@drawable/ic_share_24dp"
                    android:text="@string/share_app"
                    android:textColor="@color/white"/>

                <Button
                    android:id="@+id/btn_community"
                    style="?borderlessButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:drawableLeft="@drawable/ic_google_plus_24dp"
                    android:text="@string/plus_community"
                    android:textColor="@color/white"/>

                <Button
                    android:id="@+id/btn_contact"
                    style="?borderlessButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:drawableLeft="@drawable/ic_mail_24dp"
                    android:text="@string/contact_developer"
                    android:textColor="@color/white"/>

                <Button
                    android:id="@+id/btn_translate"
                    style="?borderlessButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:drawableLeft="@drawable/ic_translate_24dp"
                    android:text="@string/help_translate"
                    android:textColor="@color/white"/>
            </LinearLayout>
        </com.sbgapps.scoreit.views.widgets.MaxWidthFrameLayout>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>