<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".ScoreItActivity"
    >

    <ImageView
        android:id="@+id/bkgd"
        android:scaleType="centerCrop"
        android:src="@drawable/background_header"
        app:layout_aspectRatio="178%"
        app:layout_widthPercent="100%"
        />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/bkgd"
        android:layout_marginBottom="@dimen/default_margin"
        android:layout_marginLeft="@dimen/default_margin"
        android:layout_marginRight="@dimen/default_margin"
        android:src="@drawable/ic_app_nav"
        />

    <TextView
        style="@style/Base.TextAppearance.AppCompat.Large.Inverse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/subtitle"
        android:layout_toEndOf="@id/logo"
        android:layout_toRightOf="@id/logo"
        android:text="@string/app_name"
        />

    <TextView
        android:id="@+id/subtitle"
        style="@style/Base.TextAppearance.AppCompat.Inverse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/logo"
        android:layout_toEndOf="@id/logo"
        android:layout_toRightOf="@id/logo"
        android:text="@string/app_name_subtitle"
        />
</android.support.percent.PercentRelativeLayout>