<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:baselineAligned="false"
    android:gravity="center"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    tools:context=".ScoreItActivity">

    <ImageButton
        android:id="@+id/btn_minus"
        style="?attr/borderlessButtonStyle"
        android:layout_width="@dimen/btn_score_width"
        android:layout_height="@dimen/btn_score_width"
        android:tint="?colorAccent"
        app:srcCompat="@drawable/ic_minus_24dp" />

    <com.sbgapps.scoreit.views.widgets.MaxWidthFrameLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        app:maxWidth="160dp">

        <com.sbgapps.scoreit.views.widgets.SeekArc
            android:id="@+id/seekarc_points"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="30dp" />

        <TextView
            android:id="@+id/tv_points"
            style="@style/TextAppearance.AppCompat.Display1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            tools:text="48" />
    </com.sbgapps.scoreit.views.widgets.MaxWidthFrameLayout>

    <ImageButton
        android:id="@+id/btn_plus"
        style="?attr/borderlessButtonStyle"
        android:layout_width="@dimen/btn_score_width"
        android:layout_height="@dimen/btn_score_width"
        android:tint="?colorAccent"
        app:srcCompat="@drawable/ic_plus_24dp" />
</LinearLayout>